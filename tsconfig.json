{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "@parsers/*": ["./lib/parsers/*"],
      "@factories/*": ["./lib/factories/*"],
      "@lib-types/*": ["./lib/types/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "lib/**/*"
  ]
}